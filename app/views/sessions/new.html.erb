<div class="container">
  <h1>Sign In</h1>
  <%= form_for :user do |f|%>
    <div class="form-group">
      <%= f.text_field :email, placeholder: "Email", class: "form-control" %><br>
    </div>

    <div class="form-group">
      <%= f.text_field :password, placeholder: "Password", class: "form-control" %><br>
    </div>

    <div class="form-group">
      <%= f.submit value: "Login" %>
    </div>
  <%end%>
</div>
